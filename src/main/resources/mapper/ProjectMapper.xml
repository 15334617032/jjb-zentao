<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jjb.jjbzentao.dao.ProjectDao">

    <sql id="allColumns">
        t.`id`,
        t.`name`,
        t.`code`,
        t.`status`,
        t.`end`,
        t.`begin`,
        t.`po`,
        t.`team`
    </sql>


    <select id="list" resultType="com.jjb.jjbzentao.pojo.Project">
        SELECT
        <include refid="allColumns"/>
        FROM zt_project t
        <include refid="keySearch"/>
        order by t.begin DESC
    </select>


    <!--关键字搜索-->
    <sql id="keySearch">
        <where>
            <if test="p.name != null and p.name!=''">
                AND t.name = #{p.name}
            </if>
            <if test="p.status != null and p.status!=''">
                AND t.status = #{p.status}
            </if>
            <if test="p.begin != null and p.begin!=''">
                AND t.begin &gt;=#{p.begin}
            </if>
            <if test="p.end != null and p.end!=''">
                AND t.end &lt;=#{p.end}
            </if>
            AND t.deleted ='0' AND t.status!='closed'
        </where>
    </sql>

    <sql id="allColumnsByTask">
        t.`id`,
        t.`name`,
        t.`project`,
        t.`status`,
        t.`consumed`,
        t.`left`
    </sql>
    <select id="qryTasks" resultType="com.jjb.jjbzentao.pojo.Task">
        SELECT
        <include refid="allColumnsByTask"/>
        FROM zentao.zt_task t
        WHERE t.project IN
        <foreach collection="list" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
        AND t.deleted='0'
    </select>
</mapper>